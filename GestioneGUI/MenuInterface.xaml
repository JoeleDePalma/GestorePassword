<UserControl x:Class="GestorePassword.MenuInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestorePassword"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             >
    <Grid>

        <TextBlock
                Height="50"
                Width="550"
                Margin="0, 20, 0, 30"
                Background="Transparent"
                Text="BENVENUTO IN GESTORE PASSWORD"
                TextAlignment="Center"
                FontSize="30"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" RenderTransformOrigin="0.499,2.694"
            />

        <StackPanel
            Orientation = "Horizontal"
            VerticalAlignment = "Center"
            HorizontalAlignment = "Center" 
            Height="105"
            Width = "350" 
            >

            <StackPanel.Resources>

                <Style TargetType="StackPanel">
                    <Setter Property="Margin" Value="0,0,10,0"/>
                </Style>
                
            </StackPanel.Resources>

                <StackPanel>

                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                        <Setter Property="Margin" Value="0,0,0,5"/>
                    </Style>
                </StackPanel.Resources>

                <Button
                    Content="Cerca password"
                    Background="LightGoldenrodYellow"
                />

                <Button
                    Content="Modifica password"
                    Background="Blue"
                />

            </StackPanel>

            <StackPanel>

                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                        <Setter Property="Margin" Value="0,0,0,5"/>
                    </Style>
                </StackPanel.Resources>

                <Button
                Content="Crea password"
                Background="Green"
                />

                <Button
                Content="Elimina password"
                Background="Red"
                 />

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
